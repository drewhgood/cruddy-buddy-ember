<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content animated fadeInRight">
                {{#each payment in model.client.payments}}
                {{#link-to 'app.client.payments.show' payment.id tagName='div'}}    
                    <div class="col-lg-4">
                        <div class="contact-box">
                            <div class="col-sm-8">
                                <h3><strong>Invoice No.: {{payment.id}}</strong></h3>
                                <p>{{payment.registration.course.name}}</p>
                                <p>Date: {{payment.invoice_date}}</p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                {{/link-to}}
                {{/each}}
        </div>
    </div>
</div>
