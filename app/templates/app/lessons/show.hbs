<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-4" id="profile">
          <div class="widget-head-color-box navy-bg p-lg text-center">
            <div class="m-b-md">
              <h2 class="font-bold no-margins">
               {{model.course.name}}
             </h2>
             <small>{{model.course.category.title}}</small>
           </div>
           <span class="fa fa fa-support fa-5x"></span>
           <ul class="list-unstyled m-t-md">
          </ul>
        </div>
        
        <div class="widget-text-box">
          <h4 class="media-heading">Description:</h4>
          <p>{{model.course.name}}</p>
        </div>

      </div>

      <div class="col-lg-4">
        <div class="widget style1 navy-bg">
          <div class="row">
            <div class="col-xs-4">
              <i class="fa fa-dollar fa-5x"></i>
            </div>
            <div class="col-xs-8 text-right">
              <span> Cost per session </span>
              <h2 class="font-bold">${{course.session_cost}}</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-4">
        <div class="widget style1 navy-bg">
          <div class="row">
            <div class="col-xs-4">
              <i class="fa fa-support fa-5x"></i>
            </div>
            <div class="col-xs-8 text-right">
              <span> Level </span>
              <h2 class="font-bold">{{model.course.level}}</h2>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-8">
        <div class="ibox float-e-margins">
          <div class="ibox-title">
            <h3>Classes</h3>
          </div>
          <div class="ibox-content">
            <div class="table-responsive">
              <table class="table table-striped">
                <thead>
                  <tr>

                    <th></th>
                    <th>Date</th>
                    <th>Start time</th>
                    <th>End time</th>
                    <th>Duration</th>
                    <th>Instructor</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each ev in model.course.events}}
                  <tr>
                    <td><div class="icheckbox_square-green checked" style="position: relative;"><input type="checkbox" checked="" class="i-checks" name="input[]" style="position: absolute; opacity: 0;"><ins class="iCheck-helper" style="position: absolute; top: 0%; left: 0%; display: block; width: 100%; height: 100%; margin: 0px; padding: 0px; border: 0px; opacity: 0; background: rgb(255, 255, 255);"></ins></div></td>

                    <td><small>{{ev.displayStartDate}}</small></td>

                    <td>{{ev.displayStartTime}}</td>
                    <td>{{ev.displayEndTime}}</td>

                    <td>{{ev.duration}}h</td>
                    <td>{{ev.employee.fullName}}</td>

                  </tr>

                  {{/each}}                                

                </tbody>
              </table>
            </div>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>


</div>
