<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create New Empoyee</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">Employees</a>
            </li>
            <li class="active">
                <strong>New Employee</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>   

<br>
   <div class="col-lg-8">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <form method="get" class="form-horizontal">
                                <div class="form-group">
                                  <div class="col-sm-12">
                                    {{input valueBinding="model.first_name" class="form-control" placeholder='First Name' placeholder='First Name'}}
                                  </div>
                                </div>
                                
                                <div class="form-group">

                                    <div class="col-sm-12">                                    {{input valueBinding="model.last_name" class="form-control" placeholder='First Name'}}</div>
                                </div>

                                <div class="hr-line-dashed"></div>

                                <div class="form-group">

                                    <div class="col-sm-12">                                    {{input valueBinding="model.birthday" class="form-control" placeholder='Birthday'}}</div>
                                </div>

                                <div class="hr-line-dashed"></div>
                                

                                <div class="form-group">

                                    <div class="col-sm-12">                                    {{input valueBinding="model.email" class="form-control" placeholder='Email'}}</div>
                                </div>

                                <div class="hr-line-dashed"></div>


                                <div class="form-group">

                                    <div class="col-sm-12">                                    {{input valueBinding="model.phone" class="form-control" placeholder='Phone'}}</div>
                                </div>

                                <div class="form-group">

                                    <div class="col-sm-12">                                    {{input valueBinding="model.phone_alternate" class="form-control" placeholder='Alternate Phone'}}</div>
                                </div>

                                <div class="hr-line-dashed"></div>



                                <div class="form-group">

                                    <div class="col-sm-12">
                                        <select class="form-control m-b" name="account">
                                            <option>Female</option>
                                            <option>Male</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="hr-line-dashed"></div>

                                <label class="col-sm-2 control-label">Address</label>
                                 <div class="form-group">

                                    <div class="col-sm-12">
                                        <div class="row">
                                            <div class="col-md-2">
                                              {{input valueBinding="model.a_unit" class="form-control" placeholder='Unit (If Applicable)'}}
                                            </div>
                                            <div class="col-md-3">
                                              {{input valueBinding="model.a_number" class="form-control" placeholder='Number'}}
                                            </div>
                                            <div class="col-md-7">
                                              {{input valueBinding="model.a_street" class="form-control" placeholder='Street / Avenue'}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                                <div class="form-group">
                                    <div class="col-sm-12">                                    
                                      {{input valueBinding="model.a_city" class="form-control" placeholder="City"}}
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-12">                                    
                                      {{input valueBinding="model.a_postal" class="form-control" placeholder='Postal Code'}}
                                    </div>
                                </div>


                                <div class="hr-line-dashed"></div>



                                <div class="form-group">
                                     <label class="col-sm-2 control-label">Admin Privliges</label>
                                  <div class="col-sm-12">
                                    <div class="row">
                                 <!--      <label class="col-sm-2 control-label">Administrative Privelages</label> -->

                                          <div class="col-sm-6"><label class="checkbox-inline"> <input type="checkbox" value="option1" id="inlineCheckbox1"> a </label> <label class="checkbox-inline">
                                              <input type="checkbox" value="option2" id="inlineCheckbox2"> b </label> <label class="checkbox-inline">
                                              <input type="checkbox" value="option3" id="inlineCheckbox3"> c </label></div>
                                          <div class="col-sm-6">                                    
                                            {{input valueBinding="model.hourly_rate" class="form-control" placeholder='Hourly Rate'}}
                                          </div>
                                    </div>
                                  </div>
                                </div>


                                <div class="hr-line-dashed"></div>

                                <div class="form-group">
                                    <div class="col-sm-12">                                    
                                      {{input valueBinding="model.notes" class="form-control" placeholder='Enter notes about employee (optional).'}}
                                    </div>
                                </div>


                                <div class="hr-line-dashed"></div>

                               <!--  <div class="form-group">
                                </div>
 -->

                                <div class="form-group">
                                    <div class="col-sm-4 col-sm-offset-4">
                                        <button class="btn btn-primary" type="submit">Create Instructor</button>
                                        <button class="btn btn-white" type="submit">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>



                <div class="col-lg-4" id="profile">
                        <div class="widget-head-color-box navy-bg p-lg text-center">
                            <div class="m-b-md">
                            <h2 class="font-bold no-margins">
                               {{first_name}} {{last_name}}
                            </h2>
                            {{#if model.birthday}}
                                <small>{{birthday}}</small>
                            {{/if}}
                            </div>
                            <img src="assets/images/avatar-m.png" id="default_profile" class="img-circle circle-border m-b-md" alt="profile">

                            <ul class="list-unstyled m-t-md">
                            {{#if model.email}}
                            <li>
                                <span class="fa fa-envelope m-r-xs"></span>
                                <label>Email:</label>
                                {{email}}
                            </li>
                            {{/if}}
                            {{#if model.a_number}}
                            <li>
                                <span class="fa fa-home m-r-xs"></span>
                                <label>Address:</label>
                                {{#if model.a_unit}}#{{a_unit}}-{{/if}}{{a_number}}, {{a_street}}
                                {{#if model.a_city}}<br> {{a_city}}, B.C. {{/if}} - {{a_postal}}
                            </li>
                            {{/if}}
                            {{#if model.phone}}
                            <li>
                                <span class="fa fa-phone m-r-xs"></span>
                                <label>Contact:</label>
                                {{phone}}
                                {{#if model.phone_alternate}}
                                  <br><span class="fa fa-phone m-r-xs"></span>
                                  <label>Alternate:</label>{{phone_alternate}}
                                {{/if}}
                            </li>
                            {{/if}}
                        </ul>
                        </div>
                        {{#if model.notes}}
                        <div class="widget-text-box">
                            <h4 class="media-heading">Notes:</h4>
                            <p>{{notes}}</p>
                        </div>
                        {{/if}}
                </div>







