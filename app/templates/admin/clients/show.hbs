<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
           <div class="col-lg-4" id="profile">
                <div class="widget-head-color-box navy-bg p-lg text-center">
                    <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                       {{model.client.first_name}} {{model.client.last_name}}
                    </h2>
                        <small>{{model.client.age}} years old</small>
                    </div>
                    <img src="assets/images/avatar-m.png" id="default_profile" class="img-circle circle-border m-b-md" alt="profile">

                    <ul class="list-unstyled m-t-md">
                    {{#if model.client.email}}
                    <li>
                        <span class="fa fa-envelope m-r-xs"></span>
                        <label>Email:</label>
                        {{model.client.email}}
                    </li>
                    {{/if}}
                    {{#if model.client.a_number}}
                    <li>
                        <span class="fa fa-home m-r-xs"></span>
                        <label>Address:</label>
                        {{#if model.client.a_unit}}#{{model.client.a_unit}}-{{/if}}{{model.client.a_number}}, {{a_street}}
                        {{#if model.client.a_city}}<br> {{model.client.a_city}}, B.C. {{/if}} - {{model.client.a_postal}}
                    </li>
                    {{/if}}
                    {{#if model.client.phone}}
                    <li>
                        <span class="fa fa-phone m-r-xs"></span>
                        <label>Contact:</label>
                        {{model.client.phone}}
                        {{#if model.client.phone_alternate}}
                          <br><span class="fa fa-phone m-r-xs"></span>
                          <label>Alternate: </label>{{model.client.phone_alternate}}
                        {{/if}}
                    </li>
                    {{/if}}
                </ul>

                {{#each dep in model.client.dependants}}  
                    {{#link-to 'admin.dependants.show' dep.id tagName='div'}}       
                        <div class="row">
                            <div class="widget style1 red-bg">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <i class="fa fa-child fa-4x"></i>
                                    </div>
                                    <div class="col-xs-8 text-right">
                                        <span>Age: {{dep.age}} </span>
                                        <h2 class="font-bold">{{dep.first_name}}</h2>
                                    </div>
                                </div>
                            </div>
                        </div> 
                    {{/link-to}}                               
                {{/each}}
                </div>

                {{#if model.client.notes}}
                    <div class="widget-text-box">
                        <h4 class="media-heading">Notes:</h4>
                        <p>{{model.client.notes}}</p>
                    </div>
                {{/if}}

            </div>


        <div class="col-lg-4">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-dollar fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> Total Revenue from {{model.client.fullName}} </span>
                        <h2 class="font-bold">450</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-support fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> Total Lessons </span>
                        <h2 class="font-bold">{{model.client.registrationCount}}</h2>
                    </div>
                </div>
            </div>
        </div>


        <div class="col-lg-8">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3>Registrations</h3>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-5 m-b-xs"><select class="input-sm form-control input-s-sm inline">
                            <option value="0">Option 1</option>
                            <option value="1">Option 2</option>
                            <option value="2">Option 3</option>
                            <option value="3">Option 4</option>
                        </select>
                        </div>
                        <div class="col-sm-4 m-b-xs">
                            <div data-toggle="buttons" class="btn-group">
                                <label class="btn btn-sm btn-white"> <input type="radio" id="option1" name="options"> Day </label>
                                <label class="btn btn-sm btn-white active"> <input type="radio" id="option2" name="options"> Week </label>
                                <label class="btn btn-sm btn-white"> <input type="radio" id="option3" name="options"> Month </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="input-group"><input type="text" placeholder="Search" class="input-sm form-control"> <span class="input-group-btn">
                                <button type="button" class="btn btn-sm btn-primary"> Go!</button> </span></div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Swimmer</th>
                                <th>Course</th>
                                <th>Category</th>
                                <th>Start - End</th>
                            </tr>
                            </thead>
                            <tbody>
                                {{#each reg in model.client.registrations}}
                                    <tr>
                                        <td>{{#if reg.dependant.first_name}}
                                                {{#link-to 'admin.dependants.show' reg.dependant.id}}{{reg.dependant.first_name}}{{/link-to}}
                                            {{else}}
                                                {{reg.client.first_name}}
                                            {{/if}}
                                        </td>
                                        <td>{{#link-to 'admin.courses.show' reg.course.id}}{{reg.course.name}}{{/link-to}}</td>
                                        <td>{{#link-to 'admin.categories.show' reg.course.category.id}}{{reg.course.category.title}}{{/link-to}}</td>
                                        <td>{{reg.course.name}}</td>
                                        <td>{{reg.course.events}}</td>

                                    </tr>
                                {{/each}}                                   
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
         </div>  
    </div>
</div>