<div id="admin-dash">
{{#each dash in model.dashboards}}
    <div class='row'>
        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Revenue</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">${{dash.total_revenue}}</h1>
                    <small>This Year</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Number of Registrations</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{dash.num_registrations}}</h1>
                    <small>Total</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Capacity</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{dash.capacity_ratio}} %</h1>
                    <small>Spots to Registrations</small>
                </div>
            </div>
        </div>

        <div class="col-lg-3">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Number of Students</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">{{dash.num_students}}</h1>
                    <small>total</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class='col-xs-7'>
            <div class="ibox float-e-margins">
              <div class="ibox-title">
                <h5>Revenue By Category</h5>
              </div>
              <div class="ibox-content">
                <div class="row">
                    <div class="col-lg-6">
                        {{ember-chart type='Bar' data=dash.chart1 width=520 height=200em}}
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrations By Month</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6">
                            {{ember-chart type='Line' data=dash.chart2 width=520 height=200}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="col-lg-5">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registration Feed</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a>
                            </li>
                            <li><a href="#">Config option 2</a>
                            </li>
                        </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                    </div>
                </div>

                <div class="ibox-content inspinia-timeline">
                    {{#each registration in  dash.last_registrations}}
                        <div class="timeline-item">
                            <div class="row">
                                <div class="col-xs-3 date">
                                    <i class="fa fa-file-text"></i>
                                    <br>
                                    <small class="text-navy">{{registration.[2]}}</small>
                                </div>
                                <div class="col-xs-7 content">
                                    <p class="m-b-xs"><strong>Course: {{registration.[0]}}</strong></p>
                                    <p>Client: {{registration.[1]}}</p>
                                </div>
                            </div>
                        </div>
                    {{/each}}    
                </div>        
            </div>
         </div>
    </div>
{{/each}}
</div>
