<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-8">
          <h2>Categories</h2>
      </div>
    </div>

    <div class="row">
        {{#each cat in model.category}} 
            {{#link-to 'admin.categories.show' cat.id tagName='div'}}
                <div class="col-lg-4">
                    <div class="contact-box">
                        <div class="col-sm-4">
                            <div class="text-center">
                                <span><img src="assets/images/anchor.png" id="default_profile" class="img-circle circle-border m-b-md profile-img" alt="profile"></span>
                                <div class="m-t-xs font-bold">
                                    <p> {{cat.courseCount}} Classes</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <h3>{{cat.title}}</h3>
                            <p>{{cat.description}}</p>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            {{/link-to}}
        {{/each}}
    </div>
</div>